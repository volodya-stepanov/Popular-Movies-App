<?xml version="1.0" encoding="utf-8"?>
<!--Общий LinearLayout, состоящий из двух строк: первая - постер и название фильма, вторая - краткое описание -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:id="@+id/container"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.android.PopularMoviesApp.app.DetailActivity" tools:ignore="MergeRootFrame">

    <!--Вертикальный LinearLayout из двух колонок: первая - постер, вторая - название фильма и остальные атрибуты-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!--Постер-->
        <ImageView
            android:id="@+id/poster_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!--Название фильма и атрибуты-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:orientation="vertical">

            <TextView
                android:id="@+id/title_text"
                android:text="Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/rating_text"
                android:text="Rating: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/release_date_text"
                android:text="Release date: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>


    </LinearLayout>

    <TextView
        android:id="@+id/plot_synopsis_text"
        android:text="Plot Synopsis "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>
